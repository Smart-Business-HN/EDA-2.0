<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EDA_2._0.Views.PurchaseBillDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EDA_2._0.Views"
    xmlns:converters="using:EDA_2._0.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Page.Resources>
        <converters:DateConverter x:Key="DateFormatConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button
                x:Name="BackButton"
                Grid.Column="0"
                Content="&#xE72B;"
                FontFamily="Segoe MDL2 Assets"
                Click="BackButton_Click"
                VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock
                        x:Name="PurchaseBillCodeText"
                        Text="Factura #"
                        FontSize="28"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
                    <Border x:Name="StatusBadge" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusText" Text="Estado" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
                <TextBlock
                    x:Name="InvoiceDateText"
                    Text="Fecha: "
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Margin="0,4,0,0"/>
            </StackPanel>

            <ProgressRing
                x:Name="LoadingRing"
                Grid.Column="2"
                IsActive="False"
                Width="24"
                Height="24"/>
        </Grid>

        <!-- Content ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Provider and Expense Account Info -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column: Provider Info -->
                    <StackPanel Grid.Column="0" Spacing="8">
                        <TextBlock Text="PROVEEDOR" FontWeight="SemiBold" FontSize="14"/>
                        <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="ProviderNameText" Grid.Row="0" Grid.Column="1" Text="-"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="# Factura:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="InvoiceNumberText" Grid.Row="1" Grid.Column="1" Text="-" Margin="0,8,0,0"/>
                        </Grid>
                    </StackPanel>

                    <!-- Right Column: Additional Info -->
                    <StackPanel Grid.Column="1" Spacing="8" Margin="16,0,0,0">
                        <TextBlock Text="INFORMACION" FontWeight="SemiBold" FontSize="14"/>
                        <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Cuenta Gasto:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="ExpenseAccountText" Grid.Row="0" Grid.Column="1" Text="-"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="CAI:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="CaiText" Grid.Row="1" Grid.Column="1" Text="-" Margin="0,8,0,0" TextTrimming="CharacterEllipsis"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Vencimiento:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="DueDateText" Grid.Row="2" Grid.Column="1" Text="-" Margin="0,8,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Tax Details Section -->
                <StackPanel Grid.Row="1" Margin="0,0,0,24">
                    <TextBlock Text="DESGLOSE FISCAL" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Text="Exento:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="ExemptText" Text="L 0.00"/>
                            <TextBlock Text="Exonerado:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="ExoneratedText" Text="L 0.00"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Text="Gravado 15%:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="Taxed15Text" Text="L 0.00"/>
                            <TextBlock Text="ISV 15%:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="Taxes15Text" Text="L 0.00"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Spacing="8">
                            <TextBlock Text="Gravado 18%:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="Taxed18Text" Text="L 0.00"/>
                            <TextBlock Text="ISV 18%:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="Taxes18Text" Text="L 0.00"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Payments Section -->
                <StackPanel Grid.Row="2" Margin="0,0,0,24">
                    <TextBlock Text="PAGOS" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    <ListView
                        x:Name="PaymentsListView"
                        SelectionMode="None"
                        MaxHeight="200">
                        <ListView.Header>
                            <Grid Padding="12,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Fecha" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="Tipo de Pago" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="Monto" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="Registrado por" FontWeight="SemiBold"/>
                            </Grid>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Date, Converter={StaticResource DateFormatConverter}}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding PaymentType.Name}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Amount, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="{Binding CreatedBy}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Totals Section -->
                <Grid Grid.Row="3" HorizontalAlignment="Right" MinWidth="300">
                    <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="TOTAL:" FontWeight="Bold" FontSize="16"/>
                        <TextBlock x:Name="TotalText" Grid.Row="0" Grid.Column="1" Text="L 0.00" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="PENDIENTE:" FontWeight="Bold" FontSize="16" Margin="0,8,0,0" Foreground="#e74c3c"/>
                        <TextBlock x:Name="OutstandingText" Grid.Row="1" Grid.Column="1" Text="L 0.00" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Margin="0,8,0,0" Foreground="#e74c3c"/>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,16,0,0">
            <Button
                x:Name="AddPaymentButton"
                Click="AddPaymentButton_Click"
                Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8C8;" FontSize="14"/>
                    <TextBlock Text="Agregar Pago"/>
                </StackPanel>
            </Button>
            <Button
                x:Name="EditButton"
                Click="EditButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                    <TextBlock Text="Editar"/>
                </StackPanel>
            </Button>
            <Button
                x:Name="CancelButton"
                Click="CancelButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE711;" FontSize="14"/>
                    <TextBlock Text="Anular"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
