<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EDA_2._0.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EDA_2._0.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    Text="Dashboard"
                    FontSize="28"
                    FontWeight="SemiBold"/>
                <TextBlock
                    Text="Resumen de ventas y metricas del negocio"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Margin="0,4,0,0"/>
            </StackPanel>

            <Button
                Grid.Column="1"
                Content="Actualizar"
                Click="RefreshButton_Click"
                VerticalAlignment="Center">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="F5"/>
                </Button.KeyboardAccelerators>
            </Button>
        </Grid>

        <!-- Loading Indicator -->
        <ProgressRing
            x:Name="LoadingRing"
            Grid.Row="1"
            IsActive="False"
            Width="48"
            Height="48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <!-- Content -->
        <ScrollViewer
            x:Name="ContentScrollViewer"
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            Visibility="Collapsed">
            <StackPanel Spacing="24">

                <!-- Tarjetas de resumen -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Ventas Hoy -->
                    <Border Grid.Column="0" Margin="0,0,8,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Ventas Hoy" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="TodaySalesText" Text="L 0.00" FontSize="24" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            <TextBlock x:Name="TodayInvoicesText" Text="0 facturas" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Ventas Semana -->
                    <Border Grid.Column="1" Margin="8,0,8,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Esta Semana" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="WeekSalesText" Text="L 0.00" FontSize="24" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            <TextBlock x:Name="WeekInvoicesText" Text="0 facturas" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Ventas Mes -->
                    <Border Grid.Column="2" Margin="8,0,8,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Este Mes" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="MonthSalesText" Text="L 0.00" FontSize="24" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            <TextBlock x:Name="MonthInvoicesText" Text="0 facturas" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Ventas Año -->
                    <Border Grid.Column="3" Margin="8,0,0,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Este Ano" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="YearSalesText" Text="L 0.00" FontSize="24" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            <TextBlock x:Name="YearInvoicesText" Text="0 facturas" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- ========== CUENTAS POR COBRAR ========== -->
                <TextBlock Text="CUENTAS POR COBRAR" FontWeight="SemiBold" FontSize="16" Margin="0,8,0,0"/>

                <!-- Cards de Cuentas por Cobrar -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total por Cobrar -->
                    <Border Grid.Column="0" Margin="0,0,8,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Total por Cobrar" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="TotalReceivablesText" Text="L 0.00" FontSize="24" FontWeight="SemiBold" Foreground="#3498db" Margin="0,4,0,0"/>
                            <TextBlock x:Name="PendingInvoicesCountText" Text="0 facturas" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Cartera Vencida -->
                    <Border Grid.Column="1" Margin="8,0,8,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Cartera Vencida" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="OverdueAmountText" Text="L 0.00" FontSize="24" FontWeight="SemiBold" Foreground="#e74c3c" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Por Vencer (7 días) -->
                    <Border Grid.Column="2" Margin="8,0,8,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Por Vencer (7 dias)" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="DueNext7DaysText" Text="L 0.00" FontSize="24" FontWeight="SemiBold" Foreground="#f39c12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- % Cartera Vencida -->
                    <Border Grid.Column="3" Margin="8,0,0,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="% Cartera Vencida" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="OverduePercentText" Text="0%" FontSize="24" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Gráficos de Cuentas por Cobrar -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Aging Report (Barras) -->
                    <Border Grid.Column="0" Margin="0,0,12,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Antiguedad de Cartera" FontSize="14" FontWeight="SemiBold"/>
                            <lvc:CartesianChart
                                x:Name="AgingChart"
                                Height="200"
                                Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Top Facturas Vencidas -->
                    <Border Grid.Column="1" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Top 10 Facturas Vencidas" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Cliente" FontWeight="SemiBold" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" Text="Dias" FontWeight="SemiBold" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="Saldo" FontWeight="SemiBold" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right"/>
                            </Grid>

                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,6"/>

                            <ItemsControl x:Name="OverdueInvoicesControl" MaxHeight="160">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding CustomerName}" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="1" Text="{Binding DaysOverdue}" FontSize="11" Foreground="#e74c3c" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding OutstandingFormatted}" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Gráficos principales -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Ventas últimos 7 días -->
                    <Border Grid.Column="0" Margin="0,0,12,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Ventas Ultimos 7 Dias" FontSize="14" FontWeight="SemiBold"/>
                            <lvc:CartesianChart
                                x:Name="Last7DaysChart"
                                Height="250"
                                Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Métodos de pago (Pie) -->
                    <Border Grid.Column="1" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Metodos de Pago" FontSize="14" FontWeight="SemiBold"/>
                            <lvc:PieChart
                                x:Name="PaymentMethodsChart"
                                Height="250"
                                Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Segunda fila de gráficos -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Ventas por hora -->
                    <Border Grid.Column="0" Margin="0,0,12,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Horarios Mas Concurridos (Este Mes)" FontSize="14" FontWeight="SemiBold"/>
                            <lvc:CartesianChart
                                x:Name="HourlySalesChart"
                                Height="200"
                                Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Ventas mensuales -->
                    <Border Grid.Column="1" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Ventas Mensuales (Ultimo Ano)" FontSize="14" FontWeight="SemiBold"/>
                            <lvc:CartesianChart
                                x:Name="MonthlySalesChart"
                                Height="200"
                                Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Tercera fila: Top productos y familias -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top 10 Productos -->
                    <Border Grid.Column="0" Margin="0,0,12,0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Top 10 Productos (Este Mes)" FontSize="14" FontWeight="SemiBold"/>
                            <lvc:CartesianChart
                                x:Name="TopProductsChart"
                                Height="300"
                                Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Top Familias -->
                    <Border Grid.Column="1" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Familias Mas Vendidas (Este Mes)" FontSize="14" FontWeight="SemiBold"/>
                            <lvc:PieChart
                                x:Name="TopFamiliesChart"
                                Height="250"
                                Margin="0,12,0,0"/>

                            <!-- Lista de familias -->
                            <ItemsControl x:Name="FamiliesListControl" Margin="0,12,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding FamilyName}" FontSize="12"/>
                                            <TextBlock Grid.Column="1" Text="{Binding TotalRevenueFormatted}" FontSize="12" FontWeight="SemiBold"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Últimas facturas -->
                <Border Padding="16" CornerRadius="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Ultimas 10 Facturas" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Numero" FontWeight="SemiBold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="1" Text="Fecha" FontWeight="SemiBold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="2" Text="Cliente" FontWeight="SemiBold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="3" Text="Total" FontWeight="SemiBold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right"/>
                        </Grid>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,8"/>

                        <ItemsControl x:Name="RecentInvoicesControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding InvoiceNumber}" FontSize="12"/>
                                        <TextBlock Grid.Column="1" Text="{Binding DateFormatted}" FontSize="12"/>
                                        <TextBlock Grid.Column="2" Text="{Binding CustomerName}" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="3" Text="{Binding TotalFormatted}" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
