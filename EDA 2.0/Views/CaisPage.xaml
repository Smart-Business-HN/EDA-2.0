<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EDA_2._0.Views.CaisPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EDA_2._0.Views"
    xmlns:converters="using:EDA_2._0.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Page.Resources>
        <converters:DateConverter x:Key="DateConverter"/>
        <converters:BoolToCheckConverter x:Key="BoolToCheckConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock
                Text="CAIs"
                FontSize="28"
                FontWeight="SemiBold"/>
            <TextBlock
                Text="Gestionar los Codigos de Autorizacion de Impresion"
                FontSize="14"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Toolbar: Search + New CAI Button -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="400"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="SearchTextBox"
                Grid.Column="0"
                PlaceholderText="Buscar por nombre, codigo o prefijo..."
                KeyDown="SearchTextBox_KeyDown"/>

            <Button
                x:Name="NewCaiButton"
                Grid.Column="1"
                Content="+ Nuevo CAI"
                Style="{StaticResource AccentButtonStyle}"
                Click="NewCaiButton_Click"
                Margin="12,0,0,0"/>
        </Grid>

        <!-- CAIs List -->
        <ListView
            x:Name="CaisListView"
            Grid.Row="2"
            SelectionMode="None">
            <ListView.Header>
                <Grid Padding="12,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Nombre" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="Codigo" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" Text="Prefijo" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" Text="Vigencia" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="4" Text="Rango" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="Pendientes" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="6" Text="Activo" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="7" Text="Acciones" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="Auto" MinWidth="180"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Grid.Column="1" Text="{Binding Code}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" FontSize="11"/>
                        <TextBlock Grid.Column="2" Text="{Binding Prefix}" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="3" Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="{Binding FromDate, Converter={StaticResource DateConverter}}" FontSize="11"/>
                            <TextBlock Text="{Binding ToDate, Converter={StaticResource DateConverter}}" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11">
                            <Run Text="{Binding InitialCorrelative}"/>
                            <Run Text="-"/>
                            <Run Text="{Binding FinalCorrelative}"/>
                        </TextBlock>
                        <TextBlock Grid.Column="5" Text="{Binding PendingInvoices}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <FontIcon Grid.Column="6"
                                  Glyph="{Binding IsActive, Converter={StaticResource BoolToCheckConverter}}"
                                  Foreground="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                            <Button
                                Content="Editar"
                                Click="EditButton_Click"
                                Tag="{Binding}"/>
                            <Button
                                Content="Eliminar"
                                Click="DeleteButton_Click"
                                Tag="{Binding}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Footer: Pagination + Loading -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Pagination -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <Button
                    x:Name="PreviousPageButton"
                    Content="&lt; Anterior"
                    Click="PreviousPageButton_Click"
                    IsEnabled="False"/>
                <TextBlock
                    x:Name="PageInfoText"
                    Text="Pagina 1 de 1"
                    VerticalAlignment="Center"
                    Margin="8,0"/>
                <Button
                    x:Name="NextPageButton"
                    Content="Siguiente &gt;"
                    Click="NextPageButton_Click"
                    IsEnabled="False"/>
            </StackPanel>

            <!-- Loading -->
            <ProgressRing
                x:Name="LoadingRing"
                Grid.Column="1"
                IsActive="False"
                Width="24"
                Height="24"/>
        </Grid>
    </Grid>
</Page>
