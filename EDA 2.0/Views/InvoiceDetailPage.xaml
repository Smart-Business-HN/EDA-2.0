<?xml version="1.0" encoding="utf-8"?>
<base:CancellablePage
    x:Class="EDA_2._0.Views.InvoiceDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EDA_2._0.Views"
    xmlns:base="using:EDA_2._0.Views.Base"
    xmlns:converters="using:EDA_2._0.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Page.Resources>
        <converters:DateConverter x:Key="DateFormatConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:PercentageConverter x:Key="PercentageConverter"/>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button
                x:Name="BackButton"
                Grid.Column="0"
                Content="&#xE72B;"
                FontFamily="Segoe MDL2 Assets"
                Click="BackButton_Click"
                VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock
                        x:Name="InvoiceNumberText"
                        Text="Factura #"
                        FontSize="28"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
                    <Border x:Name="StatusBadge" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusText" Text="Estado" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
                <TextBlock
                    x:Name="InvoiceDateText"
                    Text="Fecha: "
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Margin="0,4,0,0"/>
            </StackPanel>

            <ProgressRing
                x:Name="LoadingRing"
                Grid.Column="2"
                IsActive="False"
                Width="24"
                Height="24"/>
        </Grid>

        <!-- Content ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- General Info -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column: Customer Info -->
                    <StackPanel Grid.Column="0" Spacing="8">
                        <TextBlock Text="CLIENTE" FontWeight="SemiBold" FontSize="14"/>
                        <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="CustomerNameText" Grid.Row="0" Grid.Column="1" Text="-"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="RTN:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="CustomerRtnText" Grid.Row="1" Grid.Column="1" Text="-" Margin="0,8,0,0"/>
                        </Grid>
                    </StackPanel>

                    <!-- Right Column: Invoice Info -->
                    <StackPanel Grid.Column="1" Spacing="8" Margin="16,0,0,0">
                        <TextBlock Text="INFORMACION" FontWeight="SemiBold" FontSize="14"/>
                        <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Usuario:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="UserNameText" Grid.Row="0" Grid.Column="1" Text="-"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="CAI:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="CaiText" Grid.Row="1" Grid.Column="1" Text="-" Margin="0,8,0,0" TextTrimming="CharacterEllipsis"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Descuento:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="DiscountText" Grid.Row="2" Grid.Column="1" Text="-" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Impresiones:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock x:Name="PrintCountText" Grid.Row="3" Grid.Column="1" Text="0" Margin="0,8,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Products Section -->
                <StackPanel Grid.Row="1" Margin="0,0,0,24">
                    <TextBlock Text="PRODUCTOS" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    <ListView
                        x:Name="ProductsListView"
                        SelectionMode="None"
                        MaxHeight="300">
                        <ListView.Header>
                            <Grid Padding="12,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Descripcion" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="Cant." FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="P. Unit." FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="ISV%" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="Total" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            </Grid>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Description}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Quantity}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding UnitPrice, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="{Binding Tax.Percentage, Converter={StaticResource PercentageConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="{Binding TotalLine, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Payments and Totals Section -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Payments -->
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <TextBlock Text="PAGOS" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                        <ListView
                            x:Name="PaymentsListView"
                            SelectionMode="None"
                            MaxHeight="200">
                            <ListView.Header>
                                <Grid Padding="12,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Tipo de Pago" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="Monto" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding PaymentType.Name}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Amount, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <!-- Totals -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="TOTALES" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Subtotal:"/>
                                    <TextBlock x:Name="SubtotalText" Grid.Column="1" Text="L 0.00" HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Descuento:" Foreground="Red"/>
                                    <TextBlock x:Name="TotalDiscountsText" Grid.Column="1" Text="L 0.00" HorizontalAlignment="Right" Foreground="Red"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Exento:"/>
                                    <TextBlock x:Name="ExemptText" Grid.Column="1" Text="L 0.00" HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Gravado 15%:"/>
                                    <TextBlock x:Name="Taxed15Text" Grid.Column="1" Text="L 0.00" HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="ISV 15%:"/>
                                    <TextBlock x:Name="Taxes15Text" Grid.Column="1" Text="L 0.00" HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Gravado 18%:"/>
                                    <TextBlock x:Name="Taxed18Text" Grid.Column="1" Text="L 0.00" HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="ISV 18%:"/>
                                    <TextBlock x:Name="Taxes18Text" Grid.Column="1" Text="L 0.00" HorizontalAlignment="Right"/>
                                </Grid>

                                <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="TOTAL:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock x:Name="TotalText" Grid.Column="1" Text="L 0.00" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right"/>
                                </Grid>

                                <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Efectivo Recibido:"/>
                                    <TextBlock x:Name="CashReceivedText" Grid.Column="1" Text="L 0.00" HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Cambio:"/>
                                    <TextBlock x:Name="ChangeGivenText" Grid.Column="1" Text="L 0.00" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,16,0,0">
            <!-- Agregar Pago - solo visible cuando status = Creada -->
            <Button x:Name="AddPaymentButton"
                    Click="AddPaymentButton_Click"
                    Visibility="Collapsed">
                <Button.Background>
                    <SolidColorBrush Color="#27AE60"/>
                </Button.Background>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;" FontSize="16" Foreground="White"/>
                    <TextBlock Text="Agregar Pago" Foreground="White"/>
                </StackPanel>
            </Button>

            <!-- Anular Factura - oculto cuando status = Anulada -->
            <Button x:Name="VoidInvoiceButton"
                    Click="VoidInvoiceButton_Click">
                <Button.Background>
                    <SolidColorBrush Color="#E74C3C"/>
                </Button.Background>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE711;" FontSize="16" Foreground="White"/>
                    <TextBlock Text="Anular Factura" Foreground="White"/>
                </StackPanel>
            </Button>

            <Button
                x:Name="PrintTicketButton"
                Click="PrintTicketButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE749;" FontSize="16"/>
                    <TextBlock Text="Imprimir Ticket (80mm)"/>
                </StackPanel>
            </Button>
            <Button
                x:Name="PrintLetterButton"
                Style="{StaticResource AccentButtonStyle}"
                Click="PrintLetterButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8A5;" FontSize="16"/>
                    <TextBlock Text="Imprimir Carta"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</base:CancellablePage>
