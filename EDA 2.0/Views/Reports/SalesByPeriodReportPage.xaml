<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EDA_2._0.Views.Reports.SalesByPeriodReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Ventas por Periodo" FontSize="28" FontWeight="SemiBold"/>
            <TextBlock Text="Analisis de ventas agrupadas por dia, semana o mes"
                       FontSize="14"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Filters -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
            <DatePicker x:Name="FromDatePicker" Header="Desde"/>
            <DatePicker x:Name="ToDatePicker" Header="Hasta"/>
            <ComboBox x:Name="GroupingComboBox"
                      Header="Agrupar por"
                      MinWidth="150"
                      SelectedIndex="0">
                <ComboBoxItem Content="Dia" Tag="Day"/>
                <ComboBoxItem Content="Semana" Tag="Week"/>
                <ComboBoxItem Content="Mes" Tag="Month"/>
            </ComboBox>
            <Button Content="Buscar"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="SearchButton_Click"
                    VerticalAlignment="Bottom"/>
            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="24" Height="24" VerticalAlignment="Bottom"/>
        </StackPanel>

        <!-- Summary Cards -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Total Facturas" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="TotalInvoicesText" Text="0" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="4,0,4,0">
                <StackPanel>
                    <TextBlock Text="Total Ventas" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="TotalSalesText" Text="L 0.00" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="Total Impuestos" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="TotalTaxesText" Text="L 0.00" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Data Grid -->
        <ListView Grid.Row="3" x:Name="DataListView" SelectionMode="None">
            <ListView.Header>
                <Grid Padding="12,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="130"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Periodo" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="Facturas" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="2" Text="Subtotal" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="3" Text="Impuestos" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="4" Text="Total" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding PeriodLabel}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding InvoiceCount}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="2" Text="{Binding SubtotalFormatted}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="{Binding TotalTaxesFormatted}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="4" Text="{Binding TotalFormatted}" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0" Spacing="8">
            <Button x:Name="PrintPdfButton"
                    Content="Imprimir PDF"
                    Click="PrintPdf_Click"
                    IsEnabled="False">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="P"/>
                </Button.KeyboardAccelerators>
            </Button>
        </StackPanel>
    </Grid>
</Page>
