<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EDA_2._0.Views.CustomerReceivablesDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:EDA_2._0.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Page.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:DateConverter x:Key="DateFormatConverter"/>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button
                x:Name="BackButton"
                Grid.Column="0"
                Click="BackButton_Click"
                VerticalAlignment="Center"
                Padding="8">
                <FontIcon Glyph="&#xE72B;" FontSize="16"/>
            </Button>

            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                <TextBlock
                    x:Name="CustomerNameText"
                    Text="Cliente"
                    FontSize="28"
                    FontWeight="SemiBold"/>
                <TextBlock
                    x:Name="CustomerRtnText"
                    Text="RTN: -"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Margin="0,4,0,0"/>
            </StackPanel>

            <ProgressRing
                x:Name="LoadingRing"
                Grid.Column="2"
                IsActive="False"
                Width="24"
                Height="24"/>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Adeudado -->
            <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Total Adeudado" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="TotalOwedText" Text="L 0.00" FontSize="24" FontWeight="Bold" Foreground="#3498db" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Facturas Pendientes -->
            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    CornerRadius="8" Padding="16" Margin="8,0,8,0">
                <StackPanel>
                    <TextBlock Text="Facturas Pendientes" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="PendingInvoicesText" Text="0" FontSize="24" FontWeight="Bold" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Monto Vencido -->
            <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    CornerRadius="8" Padding="16" Margin="8,0,8,0">
                <StackPanel>
                    <TextBlock Text="Monto Vencido" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="OverdueAmountText" Text="L 0.00" FontSize="24" FontWeight="Bold" Foreground="#e74c3c" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Por Vencer (7 dias) -->
            <Border Grid.Column="3" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    CornerRadius="8" Padding="16" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="Por Vencer (7 dias)" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="DueIn7DaysText" Text="L 0.00" FontSize="24" FontWeight="Bold" Foreground="#f39c12" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Invoices List -->
        <ListView
            x:Name="InvoicesListView"
            Grid.Row="2"
            SelectionMode="None"
            ContainerContentChanging="InvoicesListView_ContainerContentChanging">
            <ListView.Header>
                <Grid Padding="12,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto" MinWidth="80"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="# Factura" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="Emision" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" Text="Vencimiento" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" Text="Total" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="4" Text="Saldo" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="5" Text="Dias" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="6" Text="Acciones" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto" MinWidth="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding InvoiceNumber}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding IssueDate, Converter={StaticResource DateFormatConverter}}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="{Binding DueDate, Converter={StaticResource DateFormatConverter}}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="{Binding Total, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="4" Text="{Binding OutstandingAmount, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                        <TextBlock x:Name="DaysOverdueText" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Button
                            Grid.Column="6"
                            Content="Ver"
                            Click="ViewInvoiceButton_Click"
                            Tag="{Binding}"
                            HorizontalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,16,0,0">
            <Button
                x:Name="GenerateStatementButton"
                Style="{StaticResource AccentButtonStyle}"
                Click="GenerateStatementButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8A5;" FontSize="16"/>
                    <TextBlock Text="Generar Estado de Cuenta"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
