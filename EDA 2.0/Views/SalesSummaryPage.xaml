<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EDA_2._0.Views.SalesSummaryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Resumen de Ventas" FontSize="28" FontWeight="SemiBold"/>
            <TextBlock Text="Resumen de ventas por turno y por usuario"
                       FontSize="14"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Filters -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
            <DatePicker x:Name="FromDatePicker" Header="Desde"/>
            <DatePicker x:Name="ToDatePicker" Header="Hasta"/>
            <ComboBox x:Name="UserFilterComboBox"
                      Header="Usuario"
                      PlaceholderText="Todos"
                      MinWidth="200"
                      DisplayMemberPath="Name"/>
            <Button Content="Buscar"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="SearchButton_Click"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,0"/>
            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="24" Height="24" VerticalAlignment="Bottom"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="2">
            <StackPanel Spacing="24">

                <!-- Summary Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Total Turnos" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="TotalShiftsText" Text="0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8" Padding="16" Margin="4,0,4,0">
                        <StackPanel>
                            <TextBlock Text="Total Facturas" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="TotalInvoicesText" Text="0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8" Padding="16" Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Total Ventas" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="TotalSalesText" Text="L 0.00" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Section: By User -->
                <StackPanel>
                    <TextBlock Text="Resumen por Usuario" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ListView x:Name="UserSummaryListView" SelectionMode="None">
                        <ListView.Header>
                            <Grid Padding="12,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Usuario" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="Turnos" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="2" Text="Facturas" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="Total Ventas" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            </Grid>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding UserName}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TotalShifts}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="{Binding TotalInvoices}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="{Binding TotalSalesFormatted}" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Section: By Shift -->
                <StackPanel>
                    <TextBlock Text="Detalle por Turno" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ListView x:Name="ShiftDetailListView" SelectionMode="None">
                        <ListView.Header>
                            <Grid Padding="12,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="130"/>
                                    <ColumnDefinition Width="130"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Usuario" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="Turno" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="Inicio" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="3" Text="Cierre" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="4" Text="M. Inicial" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="5" Text="M. Final" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="6" Text="Diferencia" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="7" Text="Facturas" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="8" Text="Ventas" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            </Grid>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding UserName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="1" Text="{Binding ShiftType}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding StartTimeFormatted}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="{Binding EndTimeFormatted}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="{Binding InitialAmountFormatted}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="5" Text="{Binding FinalAmountFormatted}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="6" Text="{Binding DifferenceFormatted}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="7" Text="{Binding InvoiceCount}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="8" Text="{Binding TotalSalesFormatted}" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
